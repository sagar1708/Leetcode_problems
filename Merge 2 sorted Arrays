class Solution {
    public void merge(int[] nums1, int m, int[] nums2, int n) {
        if(n > 0){
            int tempPos = 0;
            
            for(int i = m ; i < m + n && tempPos < n;i++){
                nums1[i] = nums2[tempPos];
                tempPos += 1;
            }
        }
        // Only for Heavy Drivers
        Arrays.sort(nums1);
    }
}
